<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pedro.myapplication.views.tabs.PartyFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cuanto bebes antes de marearte?"
        android:paddingBottom="8dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/partyRG"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        >
        <RadioButton
            android:text="5 Cervezas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="10 Cervezas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="Hasta mañana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:text="Responder!"
        android:id="@+id/partyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
